{
  "name": "Awesome Screenshotter",
  "version": "1.0",
  "manifest_version": 1,
  "description": "An extension which can take screenshots of your web page",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "images/camera-icon.png",
    "default_title": "Awesome Screenshotter"
  },
  "icons": {
    "16": "images/16X16_camera-icon.png",
    "48": "images/48X48_camera-icon.png",
    "128": "images/128X128_camera-icon.png"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
